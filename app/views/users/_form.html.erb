<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="centered">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field row">
    <%= f.label :name, class:"strong col-3" %>
    <%= f.text_field :name, required: true, pattern: ".*[^ ].*", class:"input-text" %>
  </div>

  <div class="field row">
    <%= f.label :email, class:"strong col-3" %>
    <%= f.email_field :email, required: true, class:"input-text" %>
  </div>

  <% if current_user%>
   <div class="field row">
     <%= f.label :avatar, class:"strong col-3" %>
     <%= f.file_field :avatar%>
   </div>
   <% end%>

  <div class="field row">
    <%= f.label :password, class:"strong col-3" %>
    <%= f.password_field :password, required: true, minlength: 6, class:"input-text" %>
  </div>

  <div class="field row">
    <%= f.label :password_confirmation, class:"strong col-3" %>
    <%= f.password_field :password_confirmation, required: true, class:"input-text" %>
  </div>

  <div class="actions">
    <%= f.submit action+" User", class:"button btn-blue width-25"%>
  </div>

<% end %>
