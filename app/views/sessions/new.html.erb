<div class="main-content bg-light-gray">
  <div class="session-form centered">
    <h1 class="title">Log in</h1>
    <%= form_for :session, url: session_path do |f| %>
      <div class="field">
        <%= f.text_field :email, placeholder:"Email", class:"input-text full-width" %>
      </div>
      <div class="field">
        <%= f.password_field :password, placeholder:"Password", class:"input-text full-width" %>
      </div>
      <div class="actions">
        <%= f.submit 'Login', class:"button btn-red full-width" %>
      </div>
    <% end %>
    <div class="info">
      New user? <%= link_to "Sign up now!", new_user_path %>
    </div>
  </div>
</div>
