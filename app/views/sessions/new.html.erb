<p>Find me in app/views/sessions/new.html.erb</p>

<h1>Login with yours credentials</h1>
<div id="login-form">
  <%= form_for :session, url: session_path do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit 'Login' %>
    </div>
  <% end %>
  <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
</div>


