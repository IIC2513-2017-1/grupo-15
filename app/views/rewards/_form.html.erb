<%= form_for(reward) do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :Project %>
    <%= f.select :project_id, options_for_select(Project.all.map{|c| [ c.name, c.id ] }), prompt: "Select a project" %>
  </div>

  <div class="field">
    <%= f.label :amount %>
    <%= f.number_field :amount, step: 0.01, min: 1, required: true, 
    placeholder: "Monto mÃ­nimo de 1" %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
