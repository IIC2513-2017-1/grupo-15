<div class="reward">
  <p>
    <strong>Title:</strong>
    <%= reward.title %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= reward.amount %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= reward.description %>
  </p>

  <%= button_to 'Pledge $'+reward.amount.to_s, new_pledge_path(reward.project.id), method:"get" %>
</div>
