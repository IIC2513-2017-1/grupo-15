<!DOCTYPE html>
<html>
  <head>
    <title>FundUp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div id="logo">
        <%= link_to root_path do %>
        <h1>FundUP</h1>
        <% end %>
      </div>
      <nav id="main-menu">
        <%= link_to 'Home', root_path %>
        <%= link_to 'Projects', projects_path %>
      </nav>

      <div id="search-bar">
      <%= form_tag("/projects", method: "get") do %>
        <%= text_field_tag :search, "Search for a project" %>
        <%= submit_tag("Search") %>
      <% end %>
      </div>

      <%if logged_in?%>
        <%= link_to 'New Project', new_project_path , class:"button"%>
      <%end%>  

      <div id="user-bar">
	  <% if logged_in? %>
            <li><%= link_to "Welcome, #{current_user.name}", user_path(current_user.id) %></li>
            <li><%= link_to "Log Out", session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to "Log In", new_session_path %></li>
            <li><%= link_to 'Sign Up', new_user_path %></li>
          <% end %>
      </div>
    </header>
    <main>
      <p id="notice"><%= notice %></p>
      <%= yield %>
    </main>
    <footer>
     <hr>
      <div id="project">Â© Fundup 2017</div>
      <div id="license">
        <a rel="license" href="http://creativecommons.org/licenses/by-sa/4.0/">
          <img alt="Creative Commons License" src="https://i.creativecommons.org/l/by-sa/4.0/88x31.png"/>
        </a>
      </div>


    </footer>
  </body>
</html>
