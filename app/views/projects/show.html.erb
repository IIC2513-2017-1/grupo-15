
<div class="box">
  <p id="notice"><%= notice %></p>

  <h1><%= @project.name %></h1>
  <%= link_to "by "+@project.user.name, @project.user %>

  <p>
    <strong>Creator:</strong>
    <%= @project.user.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @project.description %>
  </p>

  <p>
    <strong>Start date:</strong>
    <%= @project.start %>
  </p>

  <p>
    <strong>End date:</strong>
    <%= @project.end %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @project.category.name %>
  </p>
</div>

<div class="pledges">
  <h2>Pledges</h2>
    <% @project.rewards.each do |reward| %>
      <%= render 'reward', reward: reward %>
    <% end %>
</div>

<div class="comments">
  <h2>Comments</h2>
    <%= render @project.comments %>
  <h2>Add a comment:</h2>
    <%= form_for([@project, Comment.new]) do |f| %>
      <p>
        <%= f.label :content %><br>
        <%= f.text_area :content %>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>
  <%= link_to 'New comment', new_comment_path %>
</div>



<%= link_to 'Back', projects_path %>
