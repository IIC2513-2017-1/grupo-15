<%= form_for(project) do |f|%>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class:"input-text" %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, class:"input-text" , rows:5, cols:60 %>
  </div>

  <div class="field">
    <%= f.label :goal %>
    <%= f.text_field :goal, class:"input-text", placeholder:"$5" %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <%= f.select :category_id, options_for_select(@categories.map{|c| [ c.name, c.id ] }), {prompt: "Select a category"},{class:"button"} %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.datetime_select :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.datetime_select :end_date %>
  </div>

  <div class="actions">
    <%= f.submit action, class:"button width-25" %>
  </div>
<% end %>
